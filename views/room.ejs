<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">

    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
  <body>
    <div class="jumbotron text-center">
      <h1>Welcome to room 1 <%= user.username %>!</h1>
    </div>
    <a href="/auth/main" class="btn btn-danger"><span class="fa fa-sign-out"></span> Leave</a>
    <ul id="messages">
      <% messages.forEach(function(message){ %>
        <li><%= message.user %>: <%= message.body %></li>
      <% }) %>
    </ul>
    <form action="/room/message/<%= user.username %>" method="post">
      <input id="m" autocomplete="off" name="body"/><button type="submit">Send</button>
    </form>
    <script src="https://node-auth-signup.herokuapp.com/socket.io/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
      var socket = io('/room');
      socket.on('chat message', function(msg){
        $('#messages').append($('<li>').text(msg.user+": "+msg.body));
      });
    </script>
  </body>
</html>
