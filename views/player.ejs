<html>
  <head>
    <title>YouTube Player</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> <!-- load bootstrap css -->
	  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <style>
      #signout-button, #authorize-button{ display: none }

      #video-container {
        position:relative;
        padding-bottom:56.25%;
        padding-top:30px;
        height:0;
        overflow:hidden;
      }

      #video-container iframe, #video-container object, #video-container embed {
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
      }
    </style>
  </head>
  <body>
    <section>
      <div class="container-fluid">
        <p>Log In With Google</p>
        <button class="btn btn-danger" id="authorize-button">Log In</button>
        <button class="btn btn-danger" id="signout-button">Signout</button>

        <div id="content">
          <div class="row">
            <div class="col s6 form-inline">
              <div class="col s6">
                  <div class="input-field">
                    <button id="shuffle" class="btn btn-success">Shuffle</button>
                  </div>
              </div>
              <div class="col s6">
                  <div class="form-group">
                    <input type="text" placeholder="Seconds until the player to stops" class="form-control" id="hush-input">
                    <button class="btn btn-dark" id="hush-button">Hush</button>
                    <button class="btn btn-dark" id="playlist-length">Change playlist length</button>
                    <h4 id="timer" class="form-text text-muted"></h4>
                  </div>
              </div>
            </div>
            <div class="col s6">
              <a class="btn btn-primary text-light" href="/auth/profile">Home</a>
            </div>
          </div>
          <div class="row" id="video-container">
            <div id="player"></div>
          </div>
        </div>
      </div>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="/youtubeScript.js" type="text/javascript"></script>
    <script async defer src="https://apis.google.com/js/api.js"
      onload="this.onload=function(){};handleClientLoad()"
      onreadystatechange="if (this.readyState === 'complete') this.onload()">
    </script>
